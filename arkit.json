{
  "$schema": "https://arkit.js.org/schema.json",
  "components": [
    {
      "type": "Entry",
      "patterns": ["index.js"]
    },
    {
      "type": "Component",
      "patterns": ["src/**/*.js"],
      "excludePatterns": ["**/__tests__/**", "**/*-test.js"]
    }
  ],
  "output": {
    "path": "arkit.svg",
    "groups": [
      {
        "first": true,
        "components": ["Entry"],
        "patterns":  ["index.js"]
      },
      {
        "type": "Gestures",
        "patterns": ["src/*.js"]
      },
      {
        "components": ["Component", "Entry"]
      }
    ]
  }
}
